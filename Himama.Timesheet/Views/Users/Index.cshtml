@{
    ViewData["Title"] = "Himama Timesheet";
}

<div class="h-100 shadow p-5 bg-light border rounded p-4">
    <p class="text-center font-weight-bold">Ready to clock in? <br> <span class="lead">Search for your name</span> </p>
    <div class="search-box pb-5">
        <i class="material-icons">&#xE8B6;</i>
        <input onkeyup="SearchName(event)" id="searchField" type="text" class="form-control"
            placeholder="Search&hellip;">
    </div>
    <div class="text-center">
        <span class="loader d-none">
            Loading.....
        </span>
        <div class="text-danger create-user d-none">
            Uh...oh! Looks like we can't find your name
            <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Create">Create New User?</a>
        </div>
    </div>
    <div class="users d-none">
        <p class="lead">Hey! We found match(es).</p>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Email
                    </th>
                    <th>
                        View Details
                    </th>
                </tr>
            </thead>
        </table>
    </div>
</div>