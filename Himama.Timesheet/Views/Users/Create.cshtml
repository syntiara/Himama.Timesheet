@model Himama.Timesheet.Data.Models.UserWDTO

@{
    ViewData["Title"] = "Create User";
}

<div class="text-center h-100 shadow p-5 bg-light border rounded signup-form">
    <form asp-action="Create">
        <p class="hint-text">Create your account.</p>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="row">
                <div class="col">
                    <input asp-for="FirstName" type="text" class="form-control" placeholder="First Name"
                        required="required">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col">
                    <input type="text" asp-for="LastName" class="form-control" placeholder="Last Name"
                        required="required">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" required="required">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button type="submit" value="Create" class="btn btn-success btn-lg btn-block">Submit</button>
        </div>
    </form>
</div>

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
